{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Or "node" depending on your Next.js setup and preferences, but "bundler" is common for recent versions
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // <--- ADD THIS LINE
    "paths": {
      "@/*": ["./*"], // Keep the general alias
      "@/components/*": ["./components/*"], // <--- ADD THIS LINE
      "@/components/ui/*": ["./components/ui/*"] // <--- ADD THIS LINE - Most likely helps with your specific error
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
